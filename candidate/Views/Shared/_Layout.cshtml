<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - candidate</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>

    <script>
        function LoadData(SkillId = null) {
            var SkillContainer = $("#SkillContainer")
            $.ajax({
                url: "/Candidates/AddNewSkills/" + SkillId ?? "",
                type: "GET",
                success: function (data) {
                    SkillContainer.append(data);
                }
            })
        }
        $(document).on("click", "#btnPlus", function (e) {
            e.preventDefault();
            LoadData();
        });
        $(document).on("click", "#DeleteSkill", function (e) {
            e.preventDefault();
            $(this).parent().parent().remove();
        })
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm bg-primary mb-3">
            <div class="container-fluid">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item offset-1">
                        <a class="nav-link fs-1 text-white" asp-area="" asp-controller="Candidates" asp-action="Index">Candidates</a>
                    </li>
                    <li class="nav-item offset-6">
                        <a class="nav-link fs-1 text-white" asp-area="" asp-controller="Skills" asp-action="Index">Skills</a>
                    </li>

                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <footer class="text-center">
        <div class="container">
            &copy; 2023 - candidate!!
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
