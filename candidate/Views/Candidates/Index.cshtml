@model IEnumerable<candidate.Models.Candidate>
@{
	ViewData["Title"] = "Index";
}

<h2 class="text-center">Candidate List</h2>
<div class="row">
	<div class="col">
		<div class="d-flex justify-content-end">
			<a asp-action="Create" asp-controller="Candidates" class="btn btn-outline-primary btn-sm mb-2">Add New Candidate</a>
		</div>
		@foreach (var item in Model)
		{
				<div class="card mb-4">
					<div class="card-header d-flex justify-content-between">
						<div>
							<img class="rounded-circle" src="@item.Image" width="35" />&nbsp;
							<strong>Name: </strong>@Html.DisplayFor(x=>item.CandidateName) &nbsp;
							<strong>Date of Birth: </strong>@Html.DisplayFor(x=>item.DateOfBirth) &nbsp;
							<strong>Phone: </strong>@Html.DisplayFor(x=>item.Phone) &nbsp;
							<strong>Fresher: </strong>@if (item.Fresher)
						{
									<span>Yes</span>
						}
						else
						{
									<span>No</span>
						}

						</div>
						<div>
							<a asp-action="Edit" asp-controller="Candidates" class="btn btn-outline-success btn-sm" asp-route-id="@item.CandidateId"><i class="fa fa-edit"></i> Edit</a>
							<a asp-action="Delete" asp-controller="Candidates" class="btn btn-outline-danger btn-sm" asp-route-id="@item.CandidateId"><i class="fa fa-trash"></i> Delete</a>
						</div>
					</div>
					<div class="card-body">
						<table class="table table-bordered table-striped table-hover table-responsive-sm">
							<thead class="table-primary">
								<tr>
									<th>Skills</th>
								</tr>
							</thead>
							<tbody>
							@foreach (var i in item.CandidateSkills)
							{
										<tr>
											<td>@Html.DisplayFor(x=>i.Skills!.SkillName)</td>
										</tr>
							}
							</tbody>
						</table>
					</div>
				</div>
		}
	</div>
</div>

